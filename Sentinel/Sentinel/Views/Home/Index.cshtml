@model List<Sentinel.Models.ErrorLog>
 
@{
    ViewData["Title"] = "Home Page";
}

<table class="table table-sm table-hover smaller-text">
    <thead>
        <tr>
            <th>Timestamp</th>
            <th>IP</th>
            <th>Application</th>
            <th>Agent</th>
            <th>OS</th>
            <th>Device</th>
            <th><i class="fab fa-vuejs"></i></th>
            <th>Message</th>
            <th>Source</th>
            <th>Line</th>
            <th>Col</th>
            <th>Stack trace</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
        <tr>
            <td>@e.Timestamp.ToLocalTime().ToShortDateString() @e.Timestamp.ToLocalTime().ToShortTimeString()</td>
            <td>@e.ClientIp</td>
            <td>@e.Application</td>
            <td>
                <browser browser="@e.UserAgent" version="@e.UserAgentVersion"></browser>
            </td>
            <td>
                <os os="@e.Os" version="@e.Osversion"></os>
            </td>
            <td>@e.Device</td>
            <td>@e.VueInfo</td>
            <td>@e.Message</td>
            <td>@e.Source</td>
            <td>@e.Line</td>
            <td>@e.Col</td>
            <td><i class="fas fa-eye"></i></td>
        </tr>
        }
    </tbody>
</table>
