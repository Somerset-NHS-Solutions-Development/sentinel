@model List<Sentinel.Models.ErrorLog>
 
<table class="table table-sm table-hover smaller-text">
    <thead>
        <tr>
            <th><input type="checkbox" id="check-all" /></th>
            <th>Timestamp</th>
            <th>IP</th>
            <th>Application</th>
            <th>Agent</th>
            <th>OS</th>
            <th>Device</th>
            <th><i class="fab fa-vuejs"></i></th>
            <th>Message</th>
            <th>Source</th>
            <th>Line</th>
            <th>Col</th>
            <th>Stack</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td><input type="checkbox" name="e-@e.Id" /></td>
                <td>@e.Timestamp.ToLocalTime().ToShortDateString() @e.Timestamp.ToLocalTime().ToShortTimeString()</td>
                <td>@e.ClientIp</td>
                <td>@e.Application</td>
                <td>
                    <browser browser="@e.UserAgent" version="@e.UserAgentVersion"></browser>
                </td>
                <td>
                    <os os="@e.Os" version="@e.Osversion"></os>
                </td>
                <td>@e.Device</td>
                <td>@e.VueInfo</td>
                <td class="message-td"><div class="message-div">@e.Message</div></td>
                <td>@e.Source</td>
                <td>@e.Line</td>
                <td>@e.Col</td>
                <td><a class="view-stack-trace" href="#" data-id="@e.Id" data-toggle="tooltip" title="Click to view"><i class="fas fa-eye"></i></a></td>
            </tr>
        }
    </tbody>
</table>
